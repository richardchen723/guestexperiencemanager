# Hostaway API Configuration
# Get your credentials from: https://dashboard.hostaway.com/settings/api
HOSTAWAY_ACCOUNT_ID=your_account_id_here
HOSTAWAY_API_KEY=your_api_key_here
HOSTAWAY_BASE_URL=https://api.hostaway.com/v1

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Flask Configuration
FLASK_HOST=127.0.0.1
FLASK_PORT=5001
FLASK_DEBUG=False
# Generate a secure secret key: python3 -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your_secret_key_here

# Google OAuth Configuration (optional)
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Database Configuration
# Option 1: PostgreSQL (Production) - Set DATABASE_URL to use PostgreSQL
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://user:password@host:port/database

# Option 2: SQLite (Local Development) - Leave DATABASE_URL empty and set DATABASE_PATH
# DATABASE_URL is empty, falls back to SQLite
DATABASE_PATH=data/database/hostaway.db

# AWS S3 Storage Configuration (Optional)
# If AWS_S3_BUCKET_NAME is set, files will be stored in S3
# If not set, files will be stored locally
AWS_S3_BUCKET_NAME=your-s3-bucket-name
AWS_S3_REGION=us-east-1
# For local testing, you can set AWS credentials:
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# In production, use IAM roles instead

# Sync Configuration
STORE_PHOTO_METADATA=True
SYNC_FULL_ON_START=True
SYNC_INCREMENTAL_DAILY=True
SYNC_INTERVAL_HOURS=24
DOWNLOAD_ATTACHMENTS=False
VERBOSE=False

# Message Sync Optimization
MESSAGE_SYNC_PARALLEL_WORKERS=10
